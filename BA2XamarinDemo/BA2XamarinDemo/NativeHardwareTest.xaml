<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BA2XamarinDemo.NativeHardwareTest">
    <ScrollView>
        <StackLayout x:Name="layout">
            <Label
              Text="Geolocation Demo"
              HorizontalTextAlignment="Center"
              FontSize="20"/>
            <Button Text="Geodaten anzeigen" Clicked="GetGeolocation_Clicked"></Button>
            <Label HorizontalTextAlignment="Center"
              FontSize="20"
           x:Name="LabelGeolocation"
                   Text="Geodaten"/>

            <Label
              Text="Kamera Demo"
              HorizontalTextAlignment="Center"
              FontSize="20"/>
            <Image
              x:Name="image"
              BackgroundColor="#F0F0F0"/>
            <Button Text="Foto aufnehmen"
                        Clicked="TakePhoto_Clicked"></Button>
            <Label
              Text="Dateisystem Demo"
              HorizontalTextAlignment="Center"
              FontSize="20"/>
            <Button Text="Speichern"
                    Clicked="Save_Clicked"></Button>
            <Button Text="Laden"
                    Clicked="Load_Clicked"></Button>
            <Editor x:Name="fileTextView"></Editor>
        </StackLayout>
    </ScrollView>
</ContentPage>