<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BA2XamarinDemo.NativeHardwareTest">
    <ContentPage.Content>
        <Grid>
            <Button Text="Take a Photo"    
            Clicked="Kamera_Button_Clicked"
                    x:Name="takePhoto"    
                    BackgroundColor="Gray"
                    TextColor="White"
                    Grid.Row="1"/>
            <Image x:Name="image" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>